<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_lock_24" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinreg"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Touble Logging In?" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppinreg"
        android:textSize="16dp"
        android:text="Enter your student ID and we'll send you a link to get back into your account" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:hint="@string/student_ID"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_forgot_password_send"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_btn_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Send" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="25dp">
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="OR"/>
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@color/gray"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:fontFamily="@font/poppinreg"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Contact Our Customer Service"/>

</LinearLayout>