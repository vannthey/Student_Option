<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="#567F8487"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinreg"
                    android:textSize="14sp"
                    android:text="Midterm"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:id="@+id/subject_midterm_news"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="xxxxxxxxxxxxxxx"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinreg"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:text="Exam Date : "/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinreg"
                        android:id="@+id/date_midterm_news"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:text="xxxxxxxxxxxxxxxx"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinreg"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:text="Time : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinreg"
                        android:id="@+id/time_midterm_news"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:text="xxxxxxxxxxxxxxxx"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinreg"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:text="Room : "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinreg"
                        android:id="@+id/room_midterm_news"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:text="xxxxxxxxxxxxxxxx"/>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
