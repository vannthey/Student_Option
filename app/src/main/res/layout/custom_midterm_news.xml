<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="midterm"
                android:textSize="12sp"
                android:fontFamily="@font/poppinreg"
                android:textColor="@color/black"
                android:background="@drawable/custom_border"
                android:backgroundTint="@color/gray"
                android:textAllCaps="true"
                android:gravity="center"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:id="@+id/subject_title_news"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="xxxxxxxxxxxxxxx"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinreg"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:text="Exam Date : "/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinreg"
                    android:id="@+id/date_exam_news"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:text="xxxxxxxxxxxxxxxx"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinreg"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:text="Time : "/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinreg"
                    android:id="@+id/time_exam_news"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:text="xxxxxxxxxxxxxxxx"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinreg"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:text="Room : "/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinreg"
                    android:id="@+id/room_exam_news"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:text="xxxxxxxxxxxxxxxx"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>