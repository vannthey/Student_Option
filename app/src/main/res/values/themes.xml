<resources>
    <!-- Base application theme. -->
    <style name="Theme.Student" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //set icon close in profile page

    <style name="setDisplayHomeAsUpEnable_profile" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_close_24</item>
    </style>

    //set icon back on action bar

    <style name="setDisplayHomeAsUpEnable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_24</item>
    </style>

    //set text size on toolbar

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/Dark_Blue</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    //set text Size on Tab bar
    <style name="TabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>